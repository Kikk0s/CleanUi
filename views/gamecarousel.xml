<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
	
	<include>./config.xml</include>

 <view name="gamecarousel">
    <gamecarousel name="gamecarousel">

    </gamecarousel> 
	<text name="gamecarouselLogoText">
        <color>${black}</color>
    </text>
	
	<text name="gamecarouselLogoText" ifSubset="Layout:Full Light">
        <color>${black}</color>
    </text>
	
	<text name="gamecarouselLogoText" ifSubset="Layout:Inverted">
        <color>${white}</color>
    </text>
	
	<text name="gamecarouselLogoText" ifSubset="Layout:Full Dark">
        <color>${white}</color>
    </text>
	
	<text name="gamecarouselLogoText" ifSubset="Layout:Dark">
        <color>${white}</color>
    </text>
	
	</view>
	
</theme>


