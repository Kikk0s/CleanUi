<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system">
		<text name="DataRilascio" extra="true">
				<fontSize>0.03</fontSize>
		</text>
		<text name="Produttore" extra="true">
			<fontSize>0.055</fontSize>
		</text>

	<text name="Descrizione" extra="true" ifSubset="systeminfoextra:CleanUi">
			<fontSize>0.020</fontSize>
		</text>
	
	<text name="Descrizione" extra="true" ifSubset="systeminfoextra:Classic">
			<fontSize>0.020</fontSize>
		</text>
		
		<text name="Descrizione" extra="true" ifSubset="systeminfoextra:no">
			<fontSize>0.020</fontSize>
		</text>
		
	<!-- informazioni numero di rom presenti in un sistema -->
	<text name="systemInfo" ifSubset="systeminfoextra:CleanUi"> 
			 <fontSize>0.05</fontSize>
			</text> 
	
	<text name="systemInfo" ifSubset="systeminfoextra:Classic"> 
			 <fontSize>0.05</fontSize>
			</text> 
			
	<text name="systemInfo" ifSubset="systeminfoextra:no">    
			 <fontSize>0.05</fontSize>
			</text> 
	</view>
</theme>