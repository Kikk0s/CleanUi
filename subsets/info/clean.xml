<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
 <include>./config.xml</include>
 
<view name="system">

	<text name="Descrizione" extra="true" ifSubset="Carousel:Vertical_wheel|vertical">    
			<size>0.49 0.50</size>
			<pos>0.50 0.175</pos>
	</text>	

	<text name="Descrizione" extra="true" ifSubset="Carousel:Horizontal_wheel|horizontal"> 
			<size>0.44 0.30</size>
			<pos>0.05 0.63</pos>
	</text>	
	
	<text name="systemInfo" ifSubset="Carousel:Horizontal_wheel|horizontal">  
			 <pos>0.5 0.7</pos>
			 <size>0.5 0.069</size>
			</text> 
	
	<text name="systemInfo" ifSubset="Carousel:Vertical_wheel|vertical">   
			 <pos>0.5 0.7</pos>
			 <size>0.5 0.069</size>
			</text> 
		
<text name="systemInfoEx" extra="true">
      <text>
		Favorites : {binding:favorites}
		Games played : {binding:gamesPlayed}
		Most played : {binding:mostPlayed}
		Last played : {binding:lastPlayedDate}</text>
		<text lang="it">
		Favoriti : {binding:favorites}
		Giocati : {binding:gamesPlayed}
		Il piu' Giocato : {binding:mostPlayed}
		Ultima partita : {binding:lastPlayedDate}</text>
       <fontPath>./tema/fonts/Ubuntu-Light.ttf</fontPath>
       <fontSize>0.015</fontSize>
    </text>	


	<image name="controllersinfo" extra="true">
		  <maxSize>0.10 0.10</maxSize>
		  <origin>0.50 </origin>
		  <tile>false</tile>
		  <path>./tema/controllers/${system.theme}.svg</path>
		</image>


<text name="systemInfoEx" extra="true" ifSubset="SmallScreen:yes"> 
      <text>
		Favorites : {binding:favorites}
		Games played : {binding:gamesPlayed}
		Most played : {binding:mostPlayed}
		Last played : {binding:lastPlayedDate}</text>
		<text lang="it">
		Favoriti : {binding:favorites}
		Giocati : {binding:gamesPlayed}
		Il piu' Giocato : {binding:mostPlayed}
		Ultima partita : {binding:lastPlayedDate}</text>
       <fontPath>./tema/fonts/Ubuntu-Light.ttf</fontPath>
       <fontSize>0.020</fontSize>
    </text>	

	<image name="controllersinfo" extra="true" ifSubset="SmallScreen:yes"> 
		  <maxSize>0.15 0.15</maxSize>
		  <origin>0.50 </origin>
		  <tile>false</tile>
		  <path>./tema/controllers/${system.theme}.svg</path>
		</image>

</view>	
</theme>
