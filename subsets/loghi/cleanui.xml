<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

  <!-- Configurazione tema --> 
   <include>./config.xml</include>

	<view name="system">

		 
		<image name="logo">
					<path>./tema/loghi/cleanui/${system.theme}.svg</path>
				</image>
				
			<image name="logo" ifSubset="Layout:Full Light">
				<color>000000</color>		
			</image>
			
			<image name="logo" ifSubset="Layout:Default">
				<color>000000</color>		
			</image>
	</view>	  

	<view name="detailed, video,gamecarousel,basic">
					<image name="system" extra="true">        
					   <path>./tema/loghi/cleanui/${system.theme}.svg</path>           
					</image>	
	</view>	

	<view name="grid">
					<image name="system" extra="true">
					   <path>./tema/loghi/cleanui/${system.theme}.svg</path>           
					</image>
	</view>	

	<view name="detailed, video,gamecarousel,basic" ifSubset="Layout:Full Light">
					<image name="system" extra="true">        
					<color>000000</color>	     
					</image>	
	</view>	

	<view name="grid">
					<image name="system" extra="true" ifSubset="Layout:Full Light">
					<color>000000</color>	         
					</image>
	</view>		


	<view name="detailed, video,gamecarousel,basic" ifSubset="Layout:Default">
					<image name="system" extra="true">        
					<color>000000</color>	    
					</image>	
	</view>	

	<view name="grid">
					<image name="system" extra="true" ifSubset="Layout:Default">
					<color>000000</color>	      
					</image>
	</view>			
	
</theme>