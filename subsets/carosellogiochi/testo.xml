<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
   <include>./config.xml</include>
   <include>./views/gamecarousel.xml</include>
  
  <view name="gamecarousel">
   <gamecarousel name="gamecarousel">
      <imageSource>text</imageSource>
	  <logoAlignment>left</logoAlignment> 
	  <logoScale>1.3</logoScale>
	  <maxLogoCount>10</maxLogoCount>
	   <pos>0.02 0.25</pos>
      <size>0.5 0.7</size>
	   <logoSize>0.5 0.12</logoSize>
      <scrollSound>./tema/sounds/Move.wav</scrollSound>	  
      <zIndex>101</zIndex>
    </gamecarousel> 
		<text name="gamecarouselLogoText">
		<fontPath>./tema/fonts/Ubuntu-Regular.ttf</fontPath>
	     <fontSize>0.025</fontSize>	
		<pos>0.02 0.25</pos>
		<size>0.5 0.7</size>
		<lineSpacing>1.0</lineSpacing>		
		 <zIndex>102</zIndex>
		 <forceUppercase>false</forceUppercase>
    </text>
  </view>
</theme>